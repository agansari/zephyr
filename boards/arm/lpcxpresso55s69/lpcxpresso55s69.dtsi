	mikrobus_header: connector {
		compatible = "mikro-bus";
		#gpio-cells = <2>;
		gpio-map-mask = <0xffffffff 0xffffffc0>;
		gpio-map-pass-thru = <0 0x3f>;
		gpio-map = <0 0 &gpio0 16 0>, /* AN  */
				/* RST */
				<2 0 &gpio1 1 0>,	/* CS   */
				<3 0 &gpio1 2 0>,	/* SCK  */
				<4 0 &gpio1 3 0>,	/* MISO */
				<5 0 &gpio0 26 0>,	/* MOSI */
				/* +3.3V */
				/* GND */
				<8 0 &gpio1 15 0>,	/* PWM  */
				<9 0 &gpio1 18 0>,	/* INT  */
				<10 0 &gpio0 27 0>,	/* RX   */
				<11 0 &gpio1 24 0>,	/* TX   */
				<12 0 &gpio1 20 0>,	/* SCL  */
				<13 0 &gpio1 21 0>;	/* SDA  */
				/* +5V */
				/* GND */
	};
};

